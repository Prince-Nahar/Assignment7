<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- EditText for entering URLs -->
    <EditText
        android:id="@+id/urlEditText"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_margin="8dp"
        android:hint="@string/enter_url"
        android:inputType="textUri"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/goButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <!-- ImageView for the Go button -->

    <!-- ImageView for the Back button -->
    <ImageView
        android:id="@+id/goButton"
        android:layout_width="94dp"
        android:layout_height="90dp"
        android:layout_margin="8dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="Go"
        android:src="@drawable/check_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/backButton"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/backButton"
        android:layout_width="52dp"
        android:layout_height="79dp"
        android:layout_margin="8dp"
        android:contentDescription="Back"
        android:src="@drawable/arrow_back_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/nextButton"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- ImageView for the Next button -->
    <ImageView
        android:id="@+id/nextButton"
        android:layout_width="50dp"
        android:layout_height="78dp"
        android:layout_margin="8dp"
        android:contentDescription="Next"
        android:src="@drawable/arrow_forward_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
